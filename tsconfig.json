{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "noImplicitAny": true,
        "target": "ES2023",
        "skipLibCheck": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "strictNullChecks": true
    },
    "include": ["src/**/*", "../tsup.config.ts"],
    "exclude": ["node_modules"]
}